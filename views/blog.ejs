<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blogging</title>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/navBar.ejs')  %>

    <div class="container m-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="not found">
        <p><%= blog.body %></p>
    </div>
    <div class="container " >
        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50px">
       
        <span style="font-weight: bold;">
            <%= blog.createdBy.fullName %>
        </span>
        
    </div>
    <div class="container">
        <h2>Comments</h2>
        <% if (locals.user) { %>
         <form action="/blog/comment/<%= blog._id %>" method="post">
            <input type="text" name="content" placeholder="Enter Your comment" class="form-control">
            <button type="submit" class="btn btn-primary btn-sm">Add</button>
        </form>
        <% } %>
    </div>

    <div class="m-3">
        <% comments.forEach(comment => { %>
         <div class="container">
        <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" alt="">
        <span style="font-weight: bold;"><%= comment.createdBy.fullName %></span>
        <h5><%= comment.content %></h5>
        </div>
        <% }) %>
    </div>

     <%- include('./partials/script') %>
</body>
</html>